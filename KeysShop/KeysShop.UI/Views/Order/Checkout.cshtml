@using KeysShop.Core
@model Order

<div class="row">
	<h3>Оформлення замовлення</h3>
	<form asp-action="Checkout" method="post" class="form-horizontal">
		<div class="form-group">
			<label asp-for="Name"></label>
			<div class="col-md-5">
				<input asp-for="Name" class="form-control"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Surname"></label>
			<div class="col-md-5">
				<input asp-for="Surname" class="form-control"/>
				<span asp-validation-for="Surname" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Phone"></label>
			<div class="col-md-5">
				<input asp-for="Phone" class="form-control"/>
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Email"></label>
			<div class="col-md-5">
				<input asp-for="Email" class="form-control"/>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Adress"></label>
			<div class="col-md-5">
				<input asp-for="Adress" class="form-control"/>
				<span asp-validation-for="Adress" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Delivery"></label>
			<div class="col-md-5">
				<select class="form-select" id="paymethod" name="paymethod">
					<option value="За реквізитами" selected="">За реквізитами</option>
					<option value="Накладений платіж">Накладений платіж</option>
				</select>
			</div>
		</div>
		<input class="btn btn-success" type="submit" value="Підтвердити замовлення" />
	</form>
</div>